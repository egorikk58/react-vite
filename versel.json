{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/main(.*)",
      "dest": "/main/index.html"
    },
    {
      "src": "/auth(.*)",
      "dest": "/auth/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}